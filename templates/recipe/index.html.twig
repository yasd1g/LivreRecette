{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}

    <div>
        <div class="container">
            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                {{ form_row(form.q) }}
                </div>
                <div class="col">
                    {{ form_row(form.category) }}
                </div>
                <div class="col">
                    {{ form_row(form.difficulty) }}
                </div>
                <div class="col" style="display: flex;margin-top: 30px; margin-bottom: 30px;">
                    <button class="btn btn-info ">
                        <i class="fas fa-search-plus"></i>
                        Rechercher
                    </button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container">
        <h1 class="my-5">Nos Recettes</h1>
        <div class="row">
            {% for recipe in recipes  %}
                {% include 'recipe/_recipe.html.twig' %}
            {% endfor %}
        </div>

        <div class="navigation d-flex justify-content-center my-3">
            {{ knp_pagination_render(recipes) }}
        </div>
    </div>
{% endblock %}
