{% extends 'base.html.twig' %}

{% block title %}Création d'une recette{% endblock %}
{% form_theme form 'recipe/_collection.html.twig' %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Créer une nouvelle recette !</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light border-dark">
                    <h2>
                        <i class="fas fa-info"></i>
                        Informations générales
                    </h2>
                    <hr>
                    {{ form_row(form.title) }}
                    {{ form_row(form.slug) }}
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.difficulty) }}
                    {{ form_row(form.category) }}
                </div>
                <div class="alert alert-light border-dark">
                    <h2>
                        <i class="fas fa-image"></i>
                        Images de l'annonce</h2>
                    <hr>
                    {{ form_row(form.coverImage) }}
                    {{ form_row(form.images) }}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light border-dark">
                    <h2>
                        <i class="fas fa-receipt"></i>
                        Détails de l'annonce
                    </h2>
                    <hr>
                    {{ form_row(form.ingredients) }}
                    {{ form_row(form.realization) }}
                    {{ form_row(form.cookingTime) }}
                    {{ form_row(form.preparationTime) }}
                    {{ form_row(form.thermostat) }}
                    {{ form_row(form.nbOfPersons) }}
                </div>
            </div>
        </div>
        <div class="alert bg-dark clearfix">
            <h2 class="alert-heading">Sauvegarder ma recette</h2>
            <p>Vous êtes sur le point de créer votre rectte</p>
            <button type="submit" class="btn btn-info float-right">
                <i class="fas fa-check"></i>
                Créer la nouvelle recette
            </button>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}

{% block javascripts %}
    <script src="/js/recipe.js"></script>
{% endblock %}
