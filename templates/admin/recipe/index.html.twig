{% extends 'admin/base.html.twig' %}

{% block title %}Administration des recettes !{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des recettes</h1>

        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">Difficult√©</th>
                <th class="text-center">Note</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>{{ recipe.id }}</td>
                    <td>{{ recipe.title }}</td>
                    <td><img src="{{ recipe.author.picture }}" alt="Avatar de {{ recipe.author.fullName }}" class="avatar avatar-micro mr-2">{{ recipe.author.fullName }}</td>
                    <td class="text-center">
                        <span class="badge badge-dark rounded">{{ recipe.difficulty }}</span>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-primary rounded">{{ recipe.avgRatings | number_format(1,',', ' ') }}</span>
                    </td>
                    <td>
                        <a href="#" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation d-flex justify-content-center my-3">
            {{ knp_pagination_render(recipes) }}
        </div>
    </div>

{% endblock %}
